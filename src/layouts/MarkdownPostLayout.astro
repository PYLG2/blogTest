---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;



---
<BaseLayout>
<p>Published on: {frontmatter.pubDate.slice(0,10)}</p>
<p><em>{frontmatter.description}</em></p>
<p>Written by {frontmatter.author}</p>
<img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />

<div class="flex flex-wrap m-0 m-auto">{frontmatter.tags.map((tag)=>
<p class="m-1 py-2 px-4 border-[#a1a1a1] border-dotted border rounded-lg bg-[#F8FCFD]">
<a class="text-blue-500" href={`/tags/${tag}`} >{tag}</a></p>)}</div>
<slot />
</BaseLayout>