---
import BaseLayout from "../../layouts/BaseLayout.astro";
const allPosts = await Astro.glob('../posts/*.md');
const pageTitle = "Tags links page";
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<BaseLayout pageTitle={pageTitle} class="text-red-500">
<div class="flex flex-wrap m-0 m-auto">{tags.map((tag)=><p class="m-1 py-2 px-4 border-[#a1a1a1] border-dotted border rounded-lg bg-[#F8FCFD]"><a class="text-blue-500" href={`/tags/${tag}`} >{tag}</a></p>)}</div>
</BaseLayout>
